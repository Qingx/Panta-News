<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:id="@+id/circlerelativelayout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circlerelativelayout"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp">
        <TextView
            android:id="@+id/me_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingVertical="32dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/me_name_cue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/me_name_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_toEndOf="@id/me_name_cue"
                android:clickable="true"
                android:textColor="@color/me_click"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/me_name_cue"
                android:layout_marginStart="28dp"
                android:layout_below="@id/me_name_enter"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_name"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/me_sex_cue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/me_sex_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/me_sex_cue" android:layout_marginStart="32dp"
                android:text="男"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="@color/me_click"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/me_sex_cue"
                android:layout_marginStart="28dp"
                android:layout_below="@id/me_sex_enter"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_sex"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/me_location_cue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/me_location_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/me_location_cue"
                android:layout_marginStart="32dp"
                android:text="成都"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="@color/me_click"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/me_location_cue"
                android:layout_marginStart="28dp"
                android:layout_below="@id/me_location_enter"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_location"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/me_email_cue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/me_email_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/me_email_cue"
                android:layout_marginStart="32dp"
                android:text="Cymbidium@outlook.com"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="@color/me_click"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/me_email_cue"
                android:layout_marginStart="28dp"
                android:layout_below="@id/me_email_enter"
                android:background="#EAEAEA"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>